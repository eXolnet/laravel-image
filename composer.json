{
    "name": "exolnet/laravel-image",
    "description": "Modules to have a generic service to store image in the file system and in the database.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre D'Eschambeault",
            "email": "adeschambeault@exolnet.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "laravel/framework": "^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.3.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Image\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Image\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p --standard=PSR2 src tests",
        "lint-fix": "vendor/bin/phpcbf -p --standard=PSR2 src tests",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
